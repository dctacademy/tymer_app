<div class="col-md-8">
  <div class="page-header">
    <h2>Listing Job Sources</h2>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_sources.each do |job_source| %>
      <tr>
        <td><%= job_source.name %></td>
        <td><%= link_to 'Show', job_source %></td>
        <td><%= link_to 'Edit', edit_job_source_path(job_source) %></td>
        <td><%= link_to 'Destroy', job_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Source', new_job_source_path, class: "btn btn-primary" %>
</div>