<div class="col-md-8">
  <div class="page-header">
    <h2>Listing Company Sources</h2>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_sources.each do |company_source| %>
      <tr>
        <td><%= company_source.name %></td>
        <td><%= link_to 'Show', company_source %></td>
        <td><%= link_to 'Edit', edit_company_source_path(company_source) %></td>
        <td><%= link_to 'Destroy', company_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company Source', new_company_source_path, class: "btn btn-primary" %>
</div>