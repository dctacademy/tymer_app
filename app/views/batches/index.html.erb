<div class="col-md-8">
  <div class="page-header">
    <h2>Listing batches</h2>
  </div>

  
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Completed hours</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.title %></td>
        <td><%= batch.start_date %></td>
        <td><%= batch.end_date %></td>
        <% total_time = 0 %>
        <% batch.trackers.each do |tracker| %> 
        <% total_time +=  ((tracker.end_datetime - tracker.start_datetime) / 60 / 60).to_f %>
        <% end %>
        <td><%= total_time %></td>
        <td><%= batch.status %></td>
        <td><%= link_to 'Show', batch %></td>
        <td><%= link_to 'Edit', edit_batch_path(batch) %></td>
        <td><%= link_to 'Destroy', batch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Batch', new_batch_path, class: "btn btn-primary" %>
</div>