<h1>Listing batch_assignments</h1>

<table>
  <thead>
    <tr>
      <th>Batch</th>
      <th>Assignment</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batch_assignments.each do |batch_assignment| %>
      <tr>
        <td><%= batch_assignment.batch_id %></td>
        <td><%= batch_assignment.assignment_id %></td>
        <td><%= batch_assignment.due_date %></td>
        <td><%= link_to 'Show', batch_assignment %></td>
        <td><%= link_to 'Edit', edit_batch_assignment_path(batch_assignment) %></td>
        <td><%= link_to 'Destroy', batch_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

