<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student_id %><br>
    <%= f.collection_select :student_id, Student.order('name'), :id, :status, {prompt: "Select Student"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :activity_type_id %><br>
    <%= f.collection_select :activity_type_id, ActivityType.all, :id, :name, {prompt: "Select"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :activity_datetime %><br>
    <%= f.datetime_select :activity_datetime, order:[:day, :month, :year], minute_step: 15, class: "from-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :is_completed %><br>
    <%= f.check_box :is_completed, class: "from-control" %>
  </div>
  <div class="form-group">
    <%= f.label :completed_on %><br>
    <%= f.datetime_select :completed_on, include_blank: true, order:[:day, :month, :year], minute_step: 15 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %> or <%= link_to "Back", activities_path %>
  </div>
<% end %>
