<h1>Listing student_assignments</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Batch assignment</th>
      <th>Submitted on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_assignments.each do |student_assignment| %>
      <tr>
        <td><%= student_assignment.student_id %></td>
        <td><%= student_assignment.batch_assignment_id %></td>
        <td><%= student_assignment.submitted_on %></td>
        <td><%= link_to 'Show', student_assignment %></td>
        <td><%= link_to 'Edit', edit_student_assignment_path(student_assignment) %></td>
        <td><%= link_to 'Destroy', student_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

