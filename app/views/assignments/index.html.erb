<div class="col-md-12">
  <div class="page-header">
    <h2>Listing Assignments</h2>
  </div>

<script> 
  $(document).ready(function(){
  $('#assignmentTable').DataTable();
});

</script>

<table class="table table-striped" id="assignmentTable">
  <thead>
    <tr>
      <th> # </th>
      <th> Code </th>
      <th>Name</th>
      <th>Level</th>
      <th>Topic</th>
      <th>Chapter</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each_with_index do |assignment,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= assignment.code %></td>
        <td><%= assignment.name %></td>
        <td><%= assignment.level %></td>
        <td><%= assignment.topic.try(:name) %></td>
        <td><%= assignment.chapter.try(:name) %></td>
        <td><%= link_to 'Show', assignment %> <%= link_to 'Edit', edit_assignment_path(assignment) %> <%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path, class: "btn btn-primary" %>
</div>