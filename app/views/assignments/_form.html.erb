
<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :topic_id %><br>
      <%= f.collection_select :topic_id, Topic.all, :id, :name, {prompt: "Select"}, {class: "form-control"} %>
    </div>

  <p id="students"> </p>

  <div class="form-group">
    <%= f.label :chapter_id %><br>
    <%= f.collection_select :chapter_id, Chapter.all, :id, :name, {prompt: "Select"}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :difficulty_level %><br>
    <%= f.select :level,["Beginner", "Intermediate", "Expert"], {prompt: "Select"}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-default" %> or <%= link_to "back", assignments_path %>
  </div>
<% end %>

<script>
$(document).ready(function() {
    var topic = document.getElementById('assignment_topic_id');
    topic.onchange = function(){
        $.ajax({
            type: "GET",
            url: "/chapters/filter_chapters?topic_id=" +this.value
        });
    };

});
</script>

