<h1>Listing trackers</h1>

<table>
  <thead>
    <tr>
      <th>Batch</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trackers.each do |tracker| %>
      <tr>
        <td><%= tracker.batch_id %></td>
        <td><%= tracker.start_datetime %></td>
        <td><%= tracker.end_datetime %></td>
        <td><%= tracker.description %></td>
        <td><%= tracker.user_id %></td>
        <td><%= link_to 'Show', tracker %></td>
        <td><%= link_to 'Edit', edit_tracker_path(tracker) %></td>
        <td><%= link_to 'Destroy', tracker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tracker', new_tracker_path %>
