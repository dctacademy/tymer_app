<div class="col-md-8">
  <div class="page-header">
    <h2><%= @student_sources.count > 1 ? "Student Sources" : "Student Source" %></h2>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_sources.each do |student_source| %>
      <tr>
        <td><%= student_source.name %></td>
        <td><%= link_to 'Show', student_source %></td>
        <td><%= link_to 'Edit', edit_student_source_path(student_source) %></td>
        <td><%= link_to 'Destroy', student_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to 'Add New', new_student_source_path, class: "btn btn-primary" %>
</div>