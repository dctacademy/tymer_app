<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Posted date</th>
      <th>Company</th>
      <th>Min ex</th>
      <th>Max ex</th>
      <th>Job source</th>
      <th>Job link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.posted_date %></td>
        <td><%= job.company_id %></td>
        <td><%= job.min_ex %></td>
        <td><%= job.max_ex %></td>
        <td><%= job.job_source_id %></td>
        <td><%= job.job_link %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

